<div class="row cart-item">
 
  <div class="col-lg-4">
    <p style="color: #ff4081"><%= product.name %></p>
  </div>

  <div class="col-lg-2">
    <p class="text-center text-green">
      <%= number_to_currency order_item.total_price %>
    </p>
  </div>  

  <div class="col-lg-2">
    <p class="text-center">
      <%= number_to_currency order_item.unit_price %>
    </p> 
  </div>    
  
  <div class="col-lg-3 row">
    <%= form_for order_item, remote: true do |f| %>
      <div class="col-lg-6">      
        <%= f.number_field :quantity, value: order_item.quantity.to_i, min: 1, class: 'form-control' %>     
      </div> 

      <div class="col-lg-6 remove-padding">        
        <%= f.hidden_field :product_id, value: product.id %>      
        <%= f.submit "Update Quantity", class: "link link-primary form-control" %>         
      </div> 
    <% end %>   
  </div>   

  <div class="col-lg-1 remove-padding-right">
    <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "form-control" } %>
  </div>  
  
</div>