<aside class="col-lg-3" id="aside">	
	<section class="aside-menu">
		<h3><%= sub_catalogues[0].parent.name.upcase %></h3>
		<ul class="menu sub-menu">
			<% for i in 0..(sub_catalogues.length - 2) do  %>
				
				<li><%= active_link_to sub_catalogues[i].name, catalogue_path(sub_catalogues[i]) %></li>			
				
			<% end %>
				<li class="last"><%= active_link_to sub_catalogues.last.name, sub_catalogue_path(sub_catalogues.last) %></li>
		</ul>		
	</section>			
</aside>